type User {
  id: ID! @id
  name: String!
  email: String!
}

enum RecipeType {
  ALL_GRAIN
  EXTRACT
  PARTIAL_MASH
  WINE
  MEAD
  KOMBUCHA
}

enum StyleType {
  LAGER
  ALE
}

type Style {
  id: ID! @id
  name: String!
  category: String!
  categoryNumber: Int!
  styleLetter: String!
  styleGuide: String
  type: StyleType
  OGMin: Float
  OGMax: Float
  FGMin: Float
  FGMax: Float
  IBUMin: Float
  IBUMax: Float
  colorMin: Float
  colorMax: Float
  carbMin: Float
  carbMax: Float
  ABVMin: Float
  ABVMax: Float
  notes: String
  profile: String
  ingredients: String
  example: String
}

type Recipe {
  id: ID! @id
  name: String!
  style: String!
  type: RecipeType
  batchSize: Float!
  boilSize: Float
  boilTime: Int
  efficiency: Int
  estimatedOG: Float
  estimatedFG: Float
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  notes: String
  # user: User!
}

type Batch {
  id: ID! @id
  brewDate: DateTime!
  recipe: Recipe!
  tastingNotes: String
  measuredOG: Float
  measuredFG: Float
}

type IngredientProfile {
  id: ID! @id
  name: String!
}

type EquipmentProfile {
  id: ID! @id
  name: String!
  batchSize: Float!
}

type FermentationStep {
  id: ID! @id
  name: String!
  duration: Int!
  startTemp: Float!
  endTemp: Float!
}

type FermentationProfile {
  id: ID! @id
  name: String!
  forYeastType: YeastType!
  steps: [FermentationStep]!
}

enum MashStepType {
  INFUSION
}

type MashStep {
  id: ID! @id
  name: String!
  type: MashStepType!
  stepTime: Int!
  stepTemp: Float!
  rampTime: Float!
  endTemp: Float!
  waterGrainRatio: Float
  decoctionAmount: Float
  infuseTemp: Float
}

type MashProfile {
  id: ID! @id
  name: String!
  steps: [MashStep]!
}

enum YeastForm {
  LIQUID
  DRY
  SLURRY
}

enum YeastType {
  ALE
  LAGER
  HYBRID 
}

enum FlocculationType {
  VERY_HIGH
  HIGH
  MEDIUM 
  LOW
}

type MiscProfile {
  id: ID! @id
  name: String!
  useFor: String
  amountIsWeight: Boolean

}

type YeastProfile {
  id: ID! @id
  name: String!
  type: YeastType!
  form: YeastForm!
  amount: Float
  amountIsWeight: Boolean
  laboratory: String
  productId: String
  minTemperature: Float
  maxTemperature: Float
  flocculation: FlocculationType
  attenuation: Float
  notes: String
  bestFor: String
  maxReuse: Int
  addToSecondary: Boolean
}

enum IngredientUse {
  MASH
  BOIL
  WHIRLPOOL
  PRIMARY
  SECONDARY
  KEGGING
  BOTTLING
}

type IngredientAddition {
  id: ID! @id
  amount: Float
  recipe: Recipe!
  use: IngredientUse! 
}

enum HopForm {
  PELLET
  LEAF
  EXTRACT
}

enum HopType {
  AROMA
  BITTERING
}

type HopProfile {
  id: ID! @id
  name: String
  origin: String
  alpha: Float
  beta: Float
  use: IngredientUse
  form: HopForm!
  type: HopType!
}

enum FermentableType {
  GRAIN
}

type FermentableProfile {
  id: ID! @id
  name: String!
  type: FermentableType!
  yield: Float
  color: Float
  addAfterBoil: Boolean
  origin: String
  notes: String
  coarseFineDiff: Float
  moisture: Float
  diastaticPower: Float
  protein: Float
  maxInBatch: Float
  recommendMash: Boolean
  IBUGalPerLB: Float
  potential: Float
  extractSubstitute: String
}

type HopAddition {
  id: ID! @id
  ingredientAddition: IngredientAddition!
  IBUs: Float!
  alpha: Float!
  time: Float!
}

type FermentableAddition {
  id: ID! @id
  profile: FermentableProfile!
  ingredientAddition: IngredientAddition!
}

type MiscAddition {
  id: ID! @id
  ingredientAddition: IngredientAddition!
  miscProfile: MiscProfile!
}

type YeastAddition {
  id: ID! @id
  yeastProfile: YeastProfile!
  ingredientAddition: IngredientAddition!
  timesCultured: Int
}


